---
const { title, description, tech, urlApp, urlGithub } = Astro.props;
import { FaGithub } from 'react-icons/fa'

---


<!-- FF0380 rosa --> 
<!-- 01E5E6 cyan -->
<div
  class={`flex bg-black/20 text-white w-full lg:w-auto h-20 rounded mr-10 flex-col items-center transition-all transform duration-500 ease-out 
  hover:shadow-xl hover:bg-white/5 hover:h-auto hover:scale-110`}
> 
  <div class={`
    [&>div]:invisible [&>div]:hover:visible hover:h-full hover:py-8 hover:ease-in hover:duration-500 hover:transition-all
    w-full px-10 py-4 transition-all duration-700 ease-out
  `}>
    <h2 class="text-white text-center text-xl font-text3">{title}</h2>
    <div class="flex flex-col items-center h-auto w-full">
      <div class="flex h-full w-full py-2">
        <!-- <h2 class="text-white text-center text-xl font-text3">{title}</h2> -->
        <p class={`
          text-md text-white/50 text-justify tracking-tight px-4 font-text2
        `}>
          {description}
        </p>
      </div>
    </div>
    <div
      class='flex flex-col justify-between text-center [&>div>a]:text-lg [&>div>a]:border [&>div>a]:w-auto [&>div>a]:transition-all [&>div>a]:py-1 [&>div>a]:rounded'
    >
      <div>
        <ul
          class="grid grid-cols-3 grid-rows-2 text-white text-center gap-3 py-4 px-3 w-full"
        >
          {
            tech.map((item) => (
              <li class="bg-white/10 rounded-full w-full px-4 text-sm truncate font-text1">
                {item}
              </li>
            ))
          }
        </ul>
      </div>
      <div class="flex justify-center gap-x-4">
        <a
          href={urlApp}
          target="_blank"
          class="hover:bg-white/90 hover:text-black transition-all bg-white/10 px-10 font-text2 active:scale-[.98]"
          >Demo</a
        >
        <a
          href={urlGithub}
          target="_blank"
          class="hover:bg-white/90 hover:text-black transition-all bg-white/10 px-5 flex justify-center items-center font-text2 active:scale-[.98]"
          ><FaGithub/></a
        >
      </div>
    </div>
  </div>
</div>


<style>
  .scale-up-vertical-top {
    animation: scale-up-vertical-top 1.6s linear;
  }
  @keyframes scale-up-vertical-top {
    0% {
      transform: scaleY(0.4);
      transform-origin: center top;
    }
    100% {
      transform: scaleY(1);
      transform-origin: center top;
    }
  }
</style>
