---
const { title, description, tech, urlApp, urlGithub } = Astro.props;
---

<div
  class="bg-black/10 text-white w-auto h-auto rounded py-5 mx-4 flex flex-col items-center border border-white/20 lg:hover:border-white/70 transition-all lg:hover:bg-white/5"
>
  <div class="flex flex-col items-center h-auto w-full px-3">
    <div class="flex flex-col gap-y-3 h-full">
      <h2 class="text-white text-center text-2xl">{title}</h2>
      <p class="text-md text-white/50 text-justify tracking-tight px-4">{description}</p>
    </div>
    <ul class="grid grid-cols-3 grid-rows-2 text-white text-center gap-3 py-4 px-3 w-full">
      {
        tech.map((item) => (
          <li class="bg-white/10 rounded-full w-full px-1 text-sm truncate">
            {item}
          </li>
        ))
      }
    </ul>
  </div>
  <div
    class="flex justify-center gap-x-4 text-center [&>a]:text-lg [&>a]:border [&>a]:w-auto [&>a]:transition-all [&>a]:px-10 [&>a]:py-1 [&>a]:rounded"
  >
    <a
      href={urlApp}
      target="_blank"
      class="hover:bg-white/70 hover:text-black transition-all bg-white/10">Ver App</a
    >
    <a
      href={urlGithub}
      target="_blank"
      class="hover:bg-white/80 hover:text-black transition-all bg-white/10">GitHub</a
    >
  </div>
</div>
