---
const { title, description, tech, urlApp, urlGithub } = Astro.props;
import { FaGithub } from 'react-icons/fa'

---


<!-- FF0380 rosa --> 
<!-- 01E5E6 cyan -->
<div
  class={`
    flex bg-white/10 top-0 text-white w-80 h-auto rounded flex-col items-center transition-all transform duration-[700ms] ease-in-out 
    hover:duration-[500ms] hover:transition-all hover:bg-white/20 hover:w-[26rem] hover:h-full
    [&>div>div]:lg:hover:block lg:border lg:border-white/10 lg:mr-10 lg:h-28 lg:hover:h-auto lg:hover:scale-105 lg:w-[26rem]`}
> 
  <div class={`
    flex flex-col items-center py-6 ease-in-out transition-all w-full px-10
    [&>div]:lg:hidden lg:flex lg:flex-col lg:items-center lg:justify-between lg:h-full
  `}>
    <h2 class="text-white text-center text-xl font-text3">{title}</h2>
    <div class="flex flex-col items-center h-full w-full">
      <div class="flex h-full w-full py-1">
        <p class={`
          text-md text-white/50 text-justify tracking-tight px-4 font-text2
        `}>
          {description}
        </p>
      </div>
    </div>
    <div
      class='flex flex-col justify-between text-center [&>div>div>a]:text-lg [&>div>div>a]:border [&>div>div>a]:w-auto [&>div>div>a]:transition-all [&>div>div>a]:py-1 [&>div>div>a]:rounded'
    >
      <div class="w-full">
        <ul
          class="grid grid-cols-3 grid-auto-rows text-white text-center gap-1 py-3 px-3 w-full"
        >
          {
            tech.map((item) => (
              <li class="bg-white/10 rounded-full w-full h-6 text-center px-4 py-1 text-[0.7rem] truncate font-text1">
                {item}
              </li>
            ))
          }
        </ul>
        <div class="flex justify-center gap-x-4">
          <a
            href={urlApp}
            target="_blank"
            class="hover:bg-white/90 hover:text-black transition-all bg-white/30 px-10 font-text2 active:scale-[.98]"
            >Demo</a
          >
          <a
            href={urlGithub}
            target="_blank"
            class="hover:bg-white/90 hover:text-black transition-all bg-white/30 px-5 flex justify-center items-center font-text2 active:scale-[.98]"
            ><FaGithub/></a
          >
        </div>
      </div>
    </div>
  </div>
</div>


<style>
  .scale-up-vertical-top {
    animation: scale-up-vertical-top 1.6s linear;
  }
  @keyframes scale-up-vertical-top {
    0% {
      transform: scaleY(0.4);
      transform-origin: center top;
    }
    100% {
      transform: scaleY(1);
      transform-origin: center top;
    }
  }
</style>
