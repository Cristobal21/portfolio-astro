---
const { title, text, clases } = Astro.props
---

<div class={`
  active:bg-white/20
  lg:hover:shadow-inner lg:hover:bg-white/10 lg:hover:w-full lg:hover:-translate-y-3 overflow-auto flex justify-center items-center
  [&>p]:lg:hover:visible [&>h2]:lg:hover:invisible 
  [&>p]:active:visible [&>h2]:active:invisible
`}>
  <h2 class="w-full absolute text-center text-4xl lg:text-5xl">{title}</h2>
  <p class="invisible w-full h-auto px-4 hover:transition-all text-ellipsis text-sm lg:text-lg">{text}</p> 
</div>